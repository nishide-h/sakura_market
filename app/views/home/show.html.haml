- provide(:title, "#{current_user.email}")

.row
  %aside.col-md-4
    %section.user_info
      - if user_signed_in?
        = render 'shared/user_info'
  .col-md-8
    
    -#
      <%= render 'follow_form' if logged_in? %>
      <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      <% end %>

